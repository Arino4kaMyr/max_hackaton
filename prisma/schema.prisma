generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  maxUserId String   @unique @map("max_user_id")
  chatId    String?  @map("chat_id")
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tasks           Task[]
  events          Event[]
  settings        UserSettings?
  pomodoroSessions PomodoroSession[]

  @@map("users")
}

model Task {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  title       String
  description String?
  dueDate     DateTime? @map("due_date")
  completed   Boolean   @default(false)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dueDate])
  @@index([completed])
  @@map("tasks")
}

model Event {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  title           String
  description     String?
  datetime        DateTime
  reminderMinutes Int?     @map("reminder_minutes")
  createdAt       DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([datetime])
  @@map("events")
}

model UserSettings {
  id                        String   @id @default(uuid())
  userId                    String   @unique @map("user_id")
  dailyDigest               Boolean  @default(true) @map("daily_digest")
  dailyDigestTime           String   @default("09:00") @map("daily_digest_time")
  reminderMinutesBeforeEvent Int     @default(30) @map("reminder_minutes_before_event")
  timezone                  String   @default("Europe/Moscow")
  pomodoroWorkMinutes       Int      @default(25) @map("pomodoro_work_minutes")
  pomodoroBreakMinutes      Int      @default(5) @map("pomodoro_break_minutes")
  pomodoroCycles            Int      @default(4) @map("pomodoro_cycles")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model PomodoroSession {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  taskId        String?  @map("task_id")
  workMinutes   Int      @map("work_minutes")
  breakMinutes  Int      @map("break_minutes")
  cycles        Int
  currentCycle  Int      @default(1) @map("current_cycle")
  isActive      Boolean  @default(true) @map("is_active")
  startedAt     DateTime @default(now()) @map("started_at")
  completedAt   DateTime? @map("completed_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
  @@map("pomodoro_sessions")
}


